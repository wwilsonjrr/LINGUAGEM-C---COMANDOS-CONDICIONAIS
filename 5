/*  5. Faça um programa que receba um número inteiro e verifique se este número é par ou
       ímpar.  */

#include <stdio.h>
#include <stdlib.h>

int main()
{
    int num;

    printf("Digite um numero qualquer inteiro: \n");
    scanf("%d", &num);

    if (num % 2 == 0)
    {
        printf("Esse numero eh par. \n");
    }
    else
    {
        printf("Esse numero eh impar. \n");
    }


    system("pause");
    return 0;
}
