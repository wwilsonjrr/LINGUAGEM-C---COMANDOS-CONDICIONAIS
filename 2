 /*  2. Leia um número fornecido pelo usuário. Se esse número for positivo, calcule a raiz
 quadrada do número. Se o número for negativo, mostre uma mensagem dizendo que o
 número é inválido.  */


#include <stdio.h>
#include <stdlib.h>
#include <math.h>

int main()
{
    float num, raiz;

    printf("Digite um numero qualquer positivo: \n");
    scanf("%f", &num);

    if (num > 0)
    {
        raiz = sqrt(num);
        printf("Esse numero eh positivo. \n");
        printf("O valor da raiz quadrada desse numero vale: %.2f \n", raiz);
    }
    else if (num < 0)
    {
        printf("Esse numero eh negativo. \n");
    }
    else
    {
        printf("Esse numero eh nulo. \n");
    }

    system("pause");
    return 0;
}
